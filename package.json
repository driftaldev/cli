    "@modelcontextprotocol/sdk": "^1.20.1",
    "@morphllm/morphsdk": "^0.2.15",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "diff": "^7.0.0",
    "ignore": "^5.3.1",
    "ink": "^5.2.0",
    "inquirer": "^12.2.0",
    "inquirer-search-list": "^1.2.6",
    "ioredis": "^5.3.2",
    "node-notifier": "^10.0.1",
    "openai": "^4.73.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "react": "^18.3.1",
    "simple-git": "^3.22.0",
    "undici": "^6.19.8",
    "yaml": "^2.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.11",
    "@types/prompts": "^2.4.9",
    "react-devtools-core": "^4.28.5",
    "typescript": "^5.4.2"
